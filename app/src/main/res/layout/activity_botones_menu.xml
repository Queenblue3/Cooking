<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".botones_menu">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        android:scrollbarStyle="outsideInset" >

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    <Button
        android:id="@+id/btnfit"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="120dp"
        android:background="@drawable/fitness"
        android:drawableTop="@drawable/ic_baseline_fitness_center_24"
        android:paddingTop="15dp"
        android:text="Fitness"
        android:textAllCaps="false"
        android:textColor="@color/white" />

        <Button
            android:id="@+id/btnasia"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnpostre"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/asia"
            android:drawableTop="@drawable/ic_rice"
            android:paddingTop="15dp"
            android:text="AsiÃ¡tica"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/btnpostre" />

        <Button
            android:id="@+id/btnpollo"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnasia"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/pollo"
            android:drawableTop="@drawable/ic_pollo"
            android:paddingTop="15dp"
            android:text="Pollo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/btnasia" />

        <Button
            android:id="@+id/btnbebi"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnpollo"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/debida"
            android:drawableTop="@drawable/ic_vaso"
            android:paddingTop="15dp"
            android:text="Bebidas"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/btnpollo" />

        <Button
            android:id="@+id/btnotro"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnensa"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/btnbebi"
            android:background="@drawable/otros"
            android:drawableTop="@drawable/ic_otro"
            android:paddingTop="15dp"
            android:text="Otros"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btnbebi"
            app:layout_constraintTop_toBottomOf="@+id/btnensa" />

        <Button
            android:id="@+id/btnensa"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnmexi"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/btnpollo"
            android:background="@drawable/salad"
            android:drawableTop="@drawable/ic_ensalada"
            android:paddingTop="15dp"
            android:text="Ensaladas"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btnpollo"
            app:layout_constraintTop_toBottomOf="@+id/btnmexi" />

        <Button
            android:id="@+id/btnpostre"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnfit"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/postre"
            android:drawableTop="@drawable/ic_postre"
            android:paddingTop="15dp"
            android:text="Postres"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/btnfit" />

        <Button
            android:id="@+id/btnmexi"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnverdu"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/btnasia"
            android:background="@drawable/mexico"
            android:drawableTop="@drawable/ic_mexico"
            android:paddingTop="15dp"
            android:text="Mexicana"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btnasia"
            app:layout_constraintTop_toBottomOf="@+id/btnverdu" />

        <Button
            android:id="@+id/btnverdu"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btndesa"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/btnpostre"
            android:background="@drawable/verduras"
            android:drawableTop="@drawable/ic_vege"
            android:paddingTop="15dp"
            android:text="Verduras"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/btnpostre"
            app:layout_constraintTop_toBottomOf="@+id/btndesa" />

        <Button
            android:id="@+id/btndesa"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="120dp"
            android:layout_toEndOf="@+id/btnfit"
            android:background="@drawable/desayunos"
            android:drawableTop="@drawable/ic_desayuno"
            android:paddingTop="15dp"
            android:text="Desayunos"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/btnfit"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnvideos"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnbebi"
            android:layout_marginStart="25dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/video"
            android:drawableTop="@drawable/ic_baseline_ondemand_video"
            android:paddingTop="15dp"
            android:text="Videos"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnresultados"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btnotro"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/btnvideos"
            android:background="@drawable/resultado"
            android:drawableTop="@drawable/ic_baseline_emoji"
            android:paddingTop="15dp"
            android:text="Resultados"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnvideos"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="18dp"
            android:textAllCaps="false"
            android:textColor="@android:color/background_dark"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:text="Explorar"
        android:textAllCaps="false"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtbienvenido"
        android:layout_width="349dp"
        android:layout_height="35dp"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="30dp"
        android:background="#F9F9F9"
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497" />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>